{
  "name": "contramind-desktop",
  "version": "1.0.0",
  "description": "ContraMind Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.contramind.desktop",
    "productName": "ContraMind",
    "directories": {
      "output": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "icon.png",
      "icon.ico",
      "icon.icns",
      "../dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": ["contramind", "legal", "contracts", "ai"],
  "author": "ContraMind AI",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1"
  }
}